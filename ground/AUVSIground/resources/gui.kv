#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

ImageProcessingGui:

#
# Main GUI window.
#
<ImageProcessingGui>:
    orientation: "vertical"
    connect_label: connect_label_id
    images_gallery: images_gallery_id
    
    #
    # Top buttons menu
    #
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        
        Button:
            text: 'Settings'
            on_release: app.open_settings()
            
        BGLabel:
            id: connect_label_id
            text: 'Disconnected'
            
        ToggleButton:
            text: 'Shoot'
            on_state: root.shoot(self.state == 'down')
            
    #
    # Image gallery widget.
    #
    ImagesGalleryWin:
        id: images_gallery_id

#
# A label class with bg color
#
<BGLabel>:
    canvas.before:
        Color:
            rgb: 1, 0, 0
            
        Rectangle:
            pos: self.pos
            size: self.size
      
<ImagesGalleryWin>
    scatter_image: image
    stacked_layout: sl
    
    #
    # View of all images
    #
    ScrollView:
        id: sv
        size_hint_x: 1
        
        StackLayout:
            id: sl
            spacing: 5
            height: self.minimum_height
            size_hint_y: None
    
    #
    # Image analysis window
    #
    BoxStencil:
        size_hint_x: 2

        RelativeLayout:
            id: rl
            
            Scatter:
                id: scatter
                size_hint: None, None
                size: rl.size
                do_rotation: False
                auto_bring_to_front: False
    
                TouchAsyncImage:
                    id: image
                    size: scatter.size
