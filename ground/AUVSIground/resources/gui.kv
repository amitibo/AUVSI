#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

ImageProcessingGui:


<ImageProcessingGui>:
    orientation: "vertical"
    connect_label: connect_label_id
    images_form: images_form_id
    
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        Button:
            text: 'Settings'
            on_release: app.open_settings()
        BGLabel:
            id: connect_label_id
            text: 'Disconnected'
        ToggleButton:
            text: 'Shoot'
            on_state: root.shoot(self.state == 'down')
    ImagesForm:
        id: images_form_id
            

<BGLabel>:
    canvas.before:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
      

<ImagesForm>:
    images_names: images_names_id
    image_viewer: image_viewer_id
    
    ListView:
        id: images_names_id
        size_hint_x: 0.3

        adapter:
            ListAdapter(data=[], cls=ListItemButton)
            
    ImageViewer:
        id: image_viewer_id