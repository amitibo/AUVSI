#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

ImageProcessingGui:


<ImageProcessingGui>:
    orientation: "vertical"
    connect_label: connect_label_id
    images_gallery: images_gallery_id
    
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        
        Button:
            text: 'Settings'
            on_release: app.open_settings()
            
        BGLabel:
            id: connect_label_id
            text: 'Disconnected'
            
        ToggleButton:
            text: 'Shoot'
            on_state: root.shoot(self.state == 'down')
            
    ImagesGalleryWin:
        id: images_gallery_id
            

<BGLabel>:
    canvas.before:
        Color:
            rgb: 1, 0, 0
            
        Rectangle:
            pos: self.pos
            size: self.size
      

<ImagesGalleryWin>
    scatter_image: image
    stacked_layout: sl
    
    ScrollView:
        id: sv
        size_hint_x: 1
        
        StackLayout:
            id: sl
            spacing: 5
            height: self.minimum_height
            size_hint_y: None
        
    BoxStencil:
        size_hint_x: 2

        RelativeLayout:
            id: rl
            
            Scatter:
                id: scatter
                size_hint: None, None
                size: rl.size
                do_rotation: False
    
                Image:
                    id: image
                    size: scatter.size
